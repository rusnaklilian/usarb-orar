
body{
    padding: 0px 0px 0px 40px;
    margin-top: 20px;
    margin-left: 150px;
}
.header{
    background: url('fonusarb.png');
    height: 100vh;
    background-repeat: no-repeat;
    background-size: cover;
}

.blocks{
    display: flex;
}
.section1{
    width: 500px;
    padding: 0px 30px;
}
.orar{
    position: relative;
    margin-bottom: 20px;
    padding: 15px 29px 15px 15px;
    background: #f8f8f8;
    color: #666;
    margin-bottom: 20px;
    font-size: 24px;
    font-weight: 700;
}


.orarcr{
    display: flex;
    justify-content: center;
    text-align: center;
    font-weight: 900;
}
.ukflex{
    display: flex;
}
.ukflexbetween{
    justify-content: space-between;
}
.ukflexnowrap{
    flex-wrap: nowrap;
}
.ukbutton{
    background-color: #25975A;
    color: white;
    font-size: 16px;
    font-weight: bold;
    text-transform: none;
    border: none;
    padding: 10px 43px;
    cursor: pointer;
    margin-top: 15px;
}
.ukbutton2:hover{
    transition: .3s;
    background-color: #ffffff;
    color:black
}
#input{
    margin-top: 15px;
    width: 493px;
    height: 35px;

}
.resultzone{
    list-style: none;
    background-color: white;
    border: ridge 1px lightgray;
    padding: 0px 5px;
}
.resultpadding{
    margin-top: 15px;
}
.resultzone2:hover{
    transition: .3s;
    background-color: #f4fd94;
    color: black;
}
.daydatanumber{
    background-color: white;
    width: 100%;
    margin-top: 15px;
    height: 30px;
    align-items: center;
    display: flex;
    color: #666;
}
#textlist{
    margin-left: 5px;
    
}
